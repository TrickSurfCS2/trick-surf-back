{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "trick-surf-back",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "bun@1.1.29",
  "description": "trick-surf-back",
  "license": "MIT",
  "keywords": [
    "backend"
  ],
  "main": "./dist/index.cjs",
  "files": [
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev": "tsup src/index.ts --format esm --watch --onSuccess 'node --env-file .env dist/index.js'",
    "build": "bun run prisma:generate && tsup --config build/build-server.ts",
    "start": "node dist/index.cjs",
    "------------------------------------------------------------------------------------------------------------": "",
    "lint": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "-------------------------------------------------------------------------------------------------------------": "",
    "test": "vitest --run --reporter verbose",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "--------------------------------------------------------------------------------------------------------------": "",
    "prisma:migrate": "prisma migrate dev --skip-seed",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:generate:watch": "prisma generate --watch",
    "prisma:seed": "prisma db seed",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "---------------------------------------------------------------------------------------------------------------": "",
    "postinstall": "simple-git-hooks && bun run prisma:generate"
  },
  "dependencies": {
    "@faker-js/faker": "^9.0.3",
    "@prisma/client": "^5.20.0",
    "@trpc/server": "^10.45.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.21.0",
    "express-validator": "^7.2.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.20.0",
    "prom-client": "^15.1.3",
    "socket.io": "^4.8.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@tsconfig/node20": "^20.1.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.4",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^2.1.1",
    "crypto": "^1.0.1",
    "eslint": "^9.11.1",
    "eslint-plugin-format": "^0.1.2",
    "esno": "^4.7.0",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "vitest": "2.1.1"
  },
  "prisma": {
    "seed": "esno prisma/seed.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged && bun run typecheck",
    "post-commit": "git status",
    "post-merge": "bun i"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
