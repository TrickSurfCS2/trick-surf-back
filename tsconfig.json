{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    // 
    "baseUrl": ".",
    "paths": {
      "#/*": [
        "./src/*"
      ],
      "#/prisma": [
        "./src/prisma.ts"
      ],
      "#/api/graphql": [
        "./src/api/graphql/*"
      ],
      "#/api/rest": [
        "./src/api/rest/*"
      ]
    }
  },
  "include": [
    "src",
    "prisma"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*"
  ]
}